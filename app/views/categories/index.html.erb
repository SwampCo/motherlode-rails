<div class="col-md-12 down_20px">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Listing categories</h4>
    </div>

    <div class="panel-body">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Parent ID</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td><%= category.parent.name unless category.parent.nil? %></td>
              <td class="action_column">
                <%= link_to 'Show', category, class: "btn btn-default" %>
                <%= link_to 'Edit', edit_category_path(category), class: "btn btn-default" %>
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
              </td>
            </tr>
          <% end %>
        </tbody>

        <tfoot>
          <tr>
            <th colspan="4">
              <% if @categories.count == 0 %>
                There are 0 categories in the system.  Click the "New Category" button to create one!
              <% elsif @categories.count == 1 %>
                There is 1 category in the system.
              <% else %>
                There are <%= @categories.count %> categories in the system
              <% end %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="panel-footer">
      <%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>