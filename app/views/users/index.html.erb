<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Manage users</h4>
  </div>

  <div class="panel-body">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Username</th>
          <th>Role</th>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><% if user.admin %> Administrator <% else %> Contributor <% end %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td class="action_column">
              <%= link_to 'Show', user, class: "btn btn-default" %>
              <%= link_to 'Edit', edit_user_path(user), class: "btn btn-default"%>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
            </td>
          </tr>
        <% end %>
      </tbody>

      <tfoot>
        <tr>
          <th colspan="5">
            <% if @users.count == 0 %>
              There are no users in the system. Click the "New User" button to add one!
            <% elsif @users.count == 1 %>
              There is 1 user in the system.
            <% else %>
              There are <%= @users.count %> users in the system
            <% end %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <div class="panel-footer">
    <%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
  </div>
</div>