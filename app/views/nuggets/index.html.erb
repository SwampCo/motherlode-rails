<h1>Listing nuggets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th>Category</th>
      <th>Published</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @nuggets.each do |nugget| %>
      <tr>
        <td><%= nugget.title %></td>
        <td><%= nugget.body %></td>
        <td><%= nugget.user.name if nugget.user%></td>
        <td><%= nugget.category.name %></td>
        <td><%= nugget.published %></td>
        <td><%= link_to 'Show', nugget %></td>
        <td><%= link_to 'Edit', edit_nugget_path(nugget) %></td>
        <td><%= link_to 'Destroy', nugget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

