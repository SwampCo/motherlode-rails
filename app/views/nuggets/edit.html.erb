<div class="container down-20px">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h4>Edit Nugget</h4>
    </div>

    <div class="panel-body">
      <%= render 'form' %>
    </div>

    <div class="panel-footer">
      <button type="submit" class="btn btn-primary">Save Nugget</button>
      <%= link_to 'Back', nuggets_path, class: "btn btn-default" %>
    </div>
  </div>
</div>

<script>
  $(function() {
    $('button[type="submit"]').click(function() {
      console.log("Nugget edit submit called...");
      $('form').submit();
    })
  })
</script>