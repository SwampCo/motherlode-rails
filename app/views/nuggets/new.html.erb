<h1>New nugget</h1>

<%= form_for(@nugget) do |f| %>
    <% if @nugget.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@nugget.errors.count, "error") %> prohibited this nugget from being saved:</h2>

          <ul>
            <% @nugget.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.label :category %><br>
      <%= f.collection_select :category_id, Category.all, :id, :name %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back', nuggets_path %>
